@model WebAtividadeEntrevista.Models.ClienteModel

<script src="https://code.jquery.com/jquery-1.9.1.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
<script src="~/Scripts/Clientes/FI.FuncoesUtil.js"></script>


<form id="formCadastro" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Nome">Nome:</label>
                <input required="required" type="text" class="form-control" id="Nome" name="Nome" placeholder="Ex.: João" maxlength="50">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="Sobrenome">Sobrenome:</label>
                <input required="required" type="text" class="form-control" id="Sobrenome" name="Sobrenome" placeholder="Ex.: da Silva" maxlength="255">
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-md-6">
            <div class="form-group">
                <label for="CPF">CPF:</label>
                <input required="required" type="text" class="form-control" id="CPF" name="CPF" placeholder="Ex.: 123.456.789-00" maxlength="14">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="Nacionalidade">Nacionalidade:</label>
                <input required="required" type="text" class="form-control" id="Nacionalidade" name="Nacionalidade" placeholder="Ex.: brasileira" maxlength="50">
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="CEP">CEP:</label>
                <input required="required" type="text" class="form-control" id="CEP" name="CEP" placeholder="Ex.: 01011-100" maxlength="9">
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="Estado">Estado:</label>
                <select required="required" id="Estado" class="form-control" name="Estado">
                    <option value="">Selecione</option>
                    <option value="SP">São Paulo</option>
                    <option value="PE">Pernambuco</option>
                </select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="Cidade">Cidade:</label>
                <input required="required" type="text" class="form-control" id="Cidade" name="Cidade" maxlength="50" placeholder="Ex.: São Paulo">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="Logradouro">Logradouro:</label>
                <input required="required" type="text" class="form-control" id="Logradouro" name="Logradouro" placeholder="Ex.: Rua Boa Vista 253" maxlength="500">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Email">E-mail:</label>
                <input required="required" type="text" class="form-control" id="Email" name="Email" placeholder="Ex.: email@email.com" maxlength="2079">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="Telefone">Telefone:</label>
                <input required="required" type="tel" class="form-control" id="Telefone" name="Telefone" placeholder="Ex.: (11) 2020-3030" maxlength="15">
            </div>
        </div>
    </div>

    <div class="btn-group">
        <button type="button" class="btn btn-sm btn-secondary" data-toggle="modal" data-target="#Beneficiario" style="font-weight: bold;">Beneficiarios</button>
    </div>


    @{
        if (Model == null)
        {
            <div class="modal fade" id="Beneficiario" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2 class="modal-title" id="exampleModalLongTitle">Beneficiários</h2>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-sm-4"><b>CPF:</b></div>
                                        <div class="col-sm-4"><b>Nome:</b></div>
                                        <div class="col-sm-4"><b></b></div>
                                        <div class="w-100"></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-4"><input type="text" name="entradaCPF" id="entradaCPF" placeholder="Ex: 123.456.789-77"></div>
                                        <div class="col-sm-4"><input type="text" name="entradaNome" id="entradaNome" placeholder="Ex: Jose Silva"></div>
                                        <div class="col-sm-4"><button type="button" class="btn btn-sm btn-success pull-right" id="add-campo" onclick="AdicionarDiv(0)"> Incluir </button></div>
                                        <div class="w-100"></div>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div id="formulario" class="container">
                                <div class="row">
                                    <div class="col-sm-4"><b>CPF</b></div>
                                    <div class="col-sm-4"><b>Nome</b></div>
                                    <div class="col-sm-4"><b></b></div>
                                    <div class="w-100"></div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="modal-footer">
                            <div class=text-right>
                                <input type="button" class="btn btn-sm btn-secondary" name="CadBen" id="CadBen" value="Fechar" data-dismiss="modal" style="font-weight: bold;">
                            </div>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (Model.CPFBen == null)
        {
            <div class="modal fade" id="Beneficiario" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2 class="modal-title" id="exampleModalLongTitle">Beneficiários</h2>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-sm-4"><b>CPF:</b></div>
                                        <div class="col-sm-4"><b>Nome:</b></div>
                                        <div class="col-sm-4"><b></b></div>
                                        <div class="w-100"></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-4"><input type="text" name="entradaCPF" id="entradaCPF" placeholder="Ex: 123.456.789-77"></div>
                                        <div class="col-sm-4"><input type="text" name="entradaNome" id="entradaNome" placeholder="Ex: Jose Silva"></div>
                                        <div class="col-sm-4"><button type="button" class="btn btn-sm btn-success pull-right" id="add-campo" onclick="AdicionarDiv(0)"> Incluir </button></div>
                                        <div class="w-100"></div>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div id="formulario" class="container">
                                <div class="row">
                                    <div class="col-sm-4"><b>CPF</b></div>
                                    <div class="col-sm-4"><b>Nome</b></div>
                                    <div class="col-sm-4"><b></b></div>
                                    <div class="w-100"></div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="modal-footer">
                            <div class=text-right>
                                <input type="button" class="btn btn-sm btn-secondary" name="CadBen" id="CadBen" value="Fechar" data-dismiss="modal" style="font-weight: bold;">
                            </div>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="modal fade" id="Beneficiario" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2 class="modal-title" id="exampleModalLongTitle">Beneficiários</h2>
                        </div>
                        <div class="modal-body">

                            <div class="form-group">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-sm-4"><b>CPF:</b></div>
                                        <div class="col-sm-4"><b>Nome:</b></div>
                                        <div class="col-sm-4"><b></b></div>
                                        <div class="w-100"></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-4"><input type="text" name="entradaCPF" id="entradaCPF" placeholder="Ex: 123.456.789-77"></div>
                                        <div class="col-sm-4"><input type="text" name="entradaNome" id="entradaNome" placeholder="Ex: Jose Silva"></div>
                                        <div class="col-sm-4"><button type="button" class="btn btn-sm btn-success pull-right" id="add-campo" onclick="AdicionarDiv(0)"> Incluir </button></div>
                                        <div class="w-100"></div>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div id="formulario" class="container">
                                <div class="row">
                                    <div class="col-sm-4"><b>CPF</b></div>
                                    <div class="col-sm-4"><b>Nome</b></div>
                                    <div class="col-sm-4"><b></b></div>
                                    <div class="w-100"></div>
                                </div>
                                <hr />
                                @for (int i = 0; i < Model.CPFBen.Length; i++)
                                {
                                    <div class="row">
                                        <div class="form-group col-sm-4" id="campoCPF-@i">
                                            <input type="text" name="CPFBen-@i" id="CPFBen" placeholder="CPF:" value="@Model.CPFBen[i]" style="border: none;" disabled>
                                        </div>
                                        <div class="form-group col-sm-4" id="campoNome-@i">
                                            <input type="text" name="NomeBen-@i" id="NomeBen" placeholder="Nome:" value="@Model.NomeBen[i]" disabled style="border: none;">
                                        </div>
                                        <div class="form-group col-sm-4" id="campoBotoes-@i">
                                            <button type="button" id="Alt-1" name="Alterar" class="btn btn-sm btn-primary btn-apagar" onclick="Habilitar(@i)"> Alterar </button>
                                            <button type="button" id="Exc-@i" class="btn btn-sm btn-danger btn-apagar" onclick="ExcluirDiv(@i)"> Excluir </button>
                                        </div>
                                        <div class="w-100"></div>
                                    </div>
                                }
                            </div>
                            <br />
                            <div class="form-group">
                                <div class="w-100"></div>
                            </div>

                        </div>
                        <br />
                        <div class="modal-footer">
                            <div class=text-right>
                                <input type="button" class="btn btn-sm btn-secondary" name="CadBen" id="CadBen" value="Fechar" data-dismiss="modal" style="font-weight: bold;">
                            </div>
                            <br />
                        </div>
                    </div>
                </div>
            </div>

        }
    }
    <div class="row">
        <div class="col-lg-12">
            <div class="pull-right">
                <button type="submit" class="btn btn-sm btn-success">Salvar</button>
                @Html.ActionLink("Voltar", "Index", "Cliente", new { }, new { @class = "btn btn-sm btn-danger" })
            </div>
        </div>
    </div>



    <script>
        var count = 0;
        count = AddCount(count);
    </script>

</form>